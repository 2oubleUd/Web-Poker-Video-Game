@page "/editplayer/{id}"

@using PokerVideoGame.Models;
@using Web_Poker_Video_Game.Interfaces;
@inject IPlayerService playerService;

<EditForm Model="@player">
    <h3>EditPlayer</h3>
    <hr />
    <div class="form-group row">
        <label for="firstName" class="col-sm-2 col-form-label">
            Name
        </label>
        <div class="col-sm-10">
            <InputText id="Name" class="form-control" placeholder="Name"
            @bind-Value="@player.Name" />
        </div>
    </div>
    <div class="form-group row">
        <label for="lastName" class="col-sm-2 col-form-label">
            Surname
        </label>
        <div class="col-sm-10">
            <InputText id="Surname" class="form-control" placeholder="Surname"
            @bind-Value="@player.Surname" />
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">
            E-mail
        </label>
        <div class="col-sm-10">
            <InputText id="Email" class="form-control" placeholder="Email"
            @bind-Value="@player.Email" />
        </div>
    </div>

    @* <a @onclick=playerService.UpdatePlayerAsync(player)"
       class="btn btn-primary m-1">Save</a> *@
</EditForm>

@code {
    public Player player { get; set; } = new Player();

    [Parameter]
    public string Id { get; set; }

    protected async override Task OnInitializedAsync()
    {
        player = await playerService.GetPlayerByIdAsync(int.Parse(Id));   
    }

}
